<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://unpkg.com/tailwindcss@1.0.4/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="client.css">
</head>
<body class="flex items-center justify-center" style="background: #F3F3F3;">
    <body class="font-mono bg-gray-400">

            <div class="ml-36 mb-48 mt-32">
            <div class="ml-10 mt-2">
                <a href="/views/eub"><img class="w-10" src="https://img.icons8.com/pastel-glyph/64/000000/circled-left.png"/></a>
            </div>
            <!-- Container -->
		<div class="container mx-auto ml-32 ">
			<div class="flex justify-center px-6 my-12">
				<!-- Row -->
				<div class="w-full xl:w-5/6 lg:w-11/12 flex">
					<!-- Col -->
					<div
						class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/4 bg-cover rounded-none"
						
					><img src="/imgs/link.jpg" alt=""></div>
					<!-- Col -->
					<div class="w-full lg:w-3/5 bg-white p-4 rounded-none lg:rounded-l-none">
						<h3 class="pt-4 text-2xl text-center">Custom Link</h3>
						<form action="/views/eub/link/shortUrls" method="POST" class="px-8 pt-6 bg-white rounded">
							
							<div class="mb-4">
								<label class="block mb-3 text-sm font-bold text-gray-700" for="fullUrl">
									Input Link
								</label>
								<input
									class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
									id="fullUrl"
									name="fullUrl"
									type="url"
									placeholder="Link"
								/>
							</div>
							<div class="mb-4 mt-4 px-48 text-center">
								<button
									class="w-full px-4 py-2 font-bold text-white bg-black hover:bg-blue-700 focus:outline-none focus:shadow-outline"
									type="submit" value=""
								>
									Generate
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

        <section class="orders light-section container mx-auto w-2/3 pr-4">
            <div class="container mx-auto pt-12">
                <h1 class="font-bold text-lg mb-4 text-black">Your Links</h1>
            </div>
            <table class="w-full table-auto bg-white mt-2">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left text-black">Link</th>
                        <th class="px-4 py-2 text-left text-black">Custom Link</th>
                        <th class="px-4 py-2 text-left text-black">No. Of Clicks</th>
                        <th class="px-4 py-2 text-left text-black">Copy</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                        <tr class="border-t-2 code-container">
                            <td class="max-w-md px-4 py-2 truncate ...">
                                <a href="<%= shortUrl.full %> "><%= shortUrl.full %> </a>
                            </td>
                            <td class="px-4 py-2 truncate ...">
                                <a class="short" href="<%= shortUrl.short %> ">http://localhost:3000/views/eub/<%= shortUrl.short %></a>
                            </td>
                            <td class="px-12 py-2">
                                <%= shortUrl.clicks %> 
                            </td>
                            <td class="px-4 py-2">
                                <button id="btnCopy" onclick="copyToClipboard(this)">
                                <svg class="w-5 h-5" height="512pt" viewBox="-40 0 512 512" width="512pt" xmlns="http://www.w3.org/2000/svg"><path d="m271 512h-191c-44.113281 0-80-35.886719-80-80v-271c0-44.113281 35.886719-80 80-80h191c44.113281 0 80 35.886719 80 80v271c0 44.113281-35.886719 80-80 80zm-191-391c-22.054688 0-40 17.945312-40 40v271c0 22.054688 17.945312 40 40 40h191c22.054688 0 40-17.945312 40-40v-271c0-22.054688-17.945312-40-40-40zm351 261v-302c0-44.113281-35.886719-80-80-80h-222c-11.046875 0-20 8.953125-20 20s8.953125 20 20 20h222c22.054688 0 40 17.945312 40 40v302c0 11.046875 8.953125 20 20 20s20-8.953125 20-20zm0 0"/></svg>
                                </button>
                            </td>
                        </tr>
                    <% }) %> 
                </tbody>
            </table>
        </section>

        
        <script>
         function copyToClipboard(element) {
    var $temp = $("<input>");
    $("body").append($temp);
    $temp.val($(element).parents('.code-container').find('.short').text()).select();
    document.execCommand("copy");
    $temp.remove();
}
        </script>

		
	</body>
</body>
</html>
